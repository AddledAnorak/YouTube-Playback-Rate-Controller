{
    "manifest_version": 3,
    "name": "YouTube Playback Rate Controller",
    "version": "0.1",

    "permissions": ["tabs"],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["*:://*.youtube.com/watch?*"],
            "js": ["content.js"]
        }
    ]
}
